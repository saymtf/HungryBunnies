<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartMenu">

    <ImageView android:id="@+id/backgroundImageView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@mipmap/main_menu"
        />

    <ImageButton android:id="@+id/playGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/start_button"
        android:layout_marginEnd="58dp"
        android:layout_alignTop="@+id/optionButton"
        android:layout_alignParentEnd="true" />

    <ImageButton android:id="@+id/optionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/option_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="48dp" />

</RelativeLayout>
